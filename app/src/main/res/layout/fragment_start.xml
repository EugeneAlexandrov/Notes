<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.StartFragment">

    <ImageView
        android:id="@+id/start_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginVertical="@dimen/app_margin"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/ic_baseline_note_add_24"
        app:layout_constraintBottom_toTopOf="@+id/room_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/room_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:text="Room"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/choose_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/start_logo" />

    <TextView
        android:id="@+id/choose_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:text="@string/or_text"
        android:textSize="@dimen/app_main_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/room_btn"
        app:layout_constraintEnd_toEndOf="@+id/start_logo"
        app:layout_constraintStart_toStartOf="@+id/start_logo" />

    <Button
        android:id="@+id/firebase_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:text="firebase"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/choose_tv"
        app:layout_constraintStart_toEndOf="@+id/choose_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>